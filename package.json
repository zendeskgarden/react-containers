{
  "name": "@zendeskgarden/react-containers",
  "scripts": {
    "build": "lerna run build --stream",
    "build:demo": "build-storybook -o demo",
    "format": "yarn format:package_json && yarn format:js && yarn format:markdown",
    "format:js": "prettier --loglevel warn --write '{packages/**/!(dist|umd),utils/**}/*.js'",
    "format:markdown": "prettier --loglevel warn --write '{packages/**/!(dist)/!(CHANGELOG)*.md,README.md}'",
    "format:package_json": "prettier-package-json --write && lerna exec -- prettier-package-json --write",
    "postinstall": "lerna bootstrap",
    "lint": "yarn lint:js && yarn lint:markdown",
    "lint:js": "eslint packages/*/src/ utils/ .storybook/ --max-warnings 0",
    "lint:markdown": "markdownlint README.md packages/*/src/**/*.md packages/*/src/*.md packages/*/README.md",
    "new": "utils/scripts/create-package.js",
    "start": "start-storybook -p 6006",
    "tag": "lerna version --conventional-commits",
    "test": "yarn test:all --watch",
    "test:all": "jest --config=utils/test/jest.config.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.2.3",
    "@babel/plugin-transform-object-assign": "7.2.0",
    "@babel/polyfill": "7.2.5",
    "@babel/preset-env": "7.2.3",
    "@babel/preset-react": "7.0.0",
    "@hot-loader/react-dom": "16.8.0-alpha.0",
    "@storybook/addon-actions": "4.1.2",
    "@storybook/addon-knobs": "4.1.2",
    "@storybook/addon-links": "4.1.2",
    "@storybook/addon-options": "4.1.4",
    "@storybook/addon-storysource": "4.1.2",
    "@storybook/addons": "4.1.2",
    "@storybook/react": "4.1.2",
    "@zendeskgarden/eslint-config": "7.0.9",
    "@zendeskgarden/react-testing": "2.0.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "chalk": "2.4.1",
    "core-js": "2.5.7",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.7.1",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.9.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-jest": "22.0.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-notice": "0.7.7",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "handlebars": "4.0.12",
    "handlebars-helpers": "0.10.0",
    "husky": "1.2.0",
    "inquirer": "6.2.0",
    "jest": "23.6.0",
    "jest-enzyme": "7.0.1",
    "lerna": "3.4.3",
    "lint-staged": "8.1.0",
    "markdownlint-cli": "^0.13.0",
    "mock-raf": "1.0.1",
    "prettier": "1.15.2",
    "prettier-package-json": "2.0.1",
    "react": "16.8.0-alpha.0",
    "react-dom": "16.8.0-alpha.0",
    "regenerator-runtime": "0.13.1",
    "rimraf": "2.6.2",
    "uglifyjs-webpack-plugin": "2.1.1",
    "webpack": "4.26.0",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.1.2",
    "webpack-merge": "4.1.5",
    "webpack-node-externals": "1.7.2"
  }
}
