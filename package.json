{
  "private": true,
  "name": "@zendeskgarden/react-containers",
  "version": "0.0.0",
  "scripts": {
    "build": "lerna run build --stream",
    "build:demo": "storybook build -o demo",
    "format": "prettier-package-json --write && npm run -- format:package_json --write && npm run -- format:js --write && npm run -- format:md --write",
    "format:all": "prettier-package-json --list-different && npm run -- format:package_json --list-different && npm run -- format:js --check && npm run -- format:md --check",
    "format:js": "prettier --log-level warn '{packages,utils}/**/*.{js,mjs,ts,tsx}' '!packages/.template' '!packages/**/dist/**'",
    "format:md": "prettier --log-level warn 'packages/**/!(CHANGELOG)*.md'",
    "format:package_json": "lerna exec -- prettier-package-json",
    "postinstall": "husky",
    "lint": "npm run lint:js && npm run lint:md",
    "lint:js": "eslint --max-warnings 0",
    "lint:md": "markdownlint README.md packages/*/src/**/*.md packages/*/src/*.md packages/*/README.md",
    "new": "utils/scripts/new.mjs",
    "prepare": "npm run build",
    "start": "storybook dev --no-version-updates -p 6006",
    "start:demo": "npm run build:demo && live-server demo",
    "tag": "lerna version --conventional-commits --force-git-tag",
    "test": "jest --config=utils/test/jest.config.js",
    "test:ci": "npm test -- --coverage --runInBand",
    "test:watch": "npm test -- --watch",
    "version": "npm run build && git add -A"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "7.26.4",
    "@babel/core": "7.26.0",
    "@babel/plugin-transform-object-assign": "7.25.9",
    "@babel/plugin-transform-runtime": "7.25.9",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-react": "7.26.3",
    "@babel/preset-typescript": "7.26.0",
    "@babel/runtime": "7.26.0",
    "@brodybits/rollup-plugin-size-snapshot": "0.15.0",
    "@rollup/plugin-babel": "6.0.4",
    "@rollup/plugin-commonjs": "28.0.1",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@rollup/plugin-replace": "6.0.1",
    "@storybook/addon-a11y": "8.4.7",
    "@storybook/addon-essentials": "8.4.7",
    "@storybook/addon-mdx-gfm": "8.4.7",
    "@storybook/addon-styling": "1.3.7",
    "@storybook/addon-webpack5-compiler-babel": "3.0.3",
    "@storybook/blocks": "8.4.7",
    "@storybook/react": "8.4.7",
    "@storybook/react-webpack5": "8.4.7",
    "@swc/core": "1.10.0",
    "@swc/jest": "0.2.37",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/jest": "29.5.14",
    "@types/prop-types": "15.7.14",
    "@types/react": "18.3.14",
    "@types/react-dom": "18.3.2",
    "@types/styled-components": "5.1.34",
    "@zendeskgarden/eslint-config": "45.0.0",
    "@zendeskgarden/react-theming": "9.3.0",
    "@zendeskgarden/scripts": "2.4.3",
    "@zendeskgarden/tailwindcss": "4.0.2",
    "autoprefixer": "10.4.20",
    "babel-plugin-module-resolver": "5.0.2",
    "babel-plugin-styled-components": "2.1.4",
    "classnames": "2.5.1",
    "commander": "12.1.0",
    "core-js": "3.39.0",
    "coveralls": "3.1.1",
    "envalid": "8.0.0",
    "eslint": "9.13.0",
    "eslint-config-prettier": "9.1.0",
    "execa": "9.5.1",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lerna": "8.1.9",
    "lint-staged": "15.2.10",
    "markdownlint-cli": "0.43.0",
    "ora": "8.1.1",
    "postcss": "8.4.49",
