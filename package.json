{
  "name": "@zendeskgarden/react-containers",
  "scripts": {
    "build": "lerna run build --stream",
    "build:demo": "build-storybook -o demo/storybook",
    "format": "yarn format:package_json && yarn format:js && yarn format:markdown",
    "format:js": "prettier --loglevel warn --write '{packages/**/!(dist),utils/**}/*.js'",
    "format:markdown": "prettier --loglevel warn --write '{packages/**/!(dist)/!(CHANGELOG)*.md,README.md}'",
    "format:package_json": "prettier-package-json --write && lerna exec -- prettier-package-json --write",
    "postinstall": "lerna bootstrap",
    "lint": "yarn lint:js && yarn lint:markdown",
    "lint:js": "eslint packages/*/src/ packages/*/stories.js utils/ .storybook/ --max-warnings 0",
    "lint:markdown": "markdownlint README.md packages/*/src/**/*.md packages/*/src/*.md packages/*/README.md",
    "new": "utils/scripts/create-package.js",
    "prepare": "yarn build",
    "start": "start-storybook -s ./demo -p 6006",
    "start:demo": "yarn build:demo && live-server demo",
    "tag": "lerna version --conventional-commits",
    "test": "yarn test:all --watch",
    "test:all": "jest --config=utils/test/jest.config.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "7.4.3",
    "@babel/core": "7.4.4",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-transform-object-assign": "7.2.0",
    "@babel/polyfill": "7.4.4",
    "@babel/preset-env": "7.4.4",
    "@babel/preset-react": "7.0.0",
    "@storybook/addon-a11y": "5.1.4",
    "@storybook/addon-centered": "5.1.4",
    "@storybook/addon-knobs": "5.1.4",
    "@storybook/addon-storysource": "5.1.4",
    "@storybook/addons": "5.1.4",
    "@storybook/react": "5.1.4",
    "@storybook/theming": "5.1.4",
    "@zendeskgarden/css-variables": "6.3.2",
    "@zendeskgarden/eslint-config": "7.2.1",
    "@zendeskgarden/react-testing": "2.0.2",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.8.0",
    "babel-loader": "8.0.6",
    "chalk": "2.4.2",
    "core-js": "3.1.3",
    "coveralls": "3.0.3",
    "eslint": "5.16.0",
    "eslint-config-prettier": "4.2.0",
    "eslint-plugin-jest": "22.6.4",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-notice": "0.7.8",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-react-hooks": "1.6.0",
    "gh-pages": "2.0.1",
    "handlebars": "4.1.2",
    "handlebars-helpers": "0.10.0",
    "husky": "2.2.0",
    "inquirer": "6.3.1",
    "jest": "24.8.0",
    "jest-dom": "3.2.2",
    "lerna": "3.13.4",
    "lint-staged": "8.1.6",
    "live-server": "1.2.1",
    "markdownlint-cli": "0.15.0",
    "popper.js": "1.15.0",
    "prettier": "1.17.0",
    "prettier-package-json": "2.1.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-testing-library": "7.0.0",
    "regenerator-runtime": "0.13.2",
    "rimraf": "2.6.3",
    "uglifyjs-webpack-plugin": "2.1.3",
    "webpack": "4.30.0",
    "webpack-bundle-analyzer": "3.3.2",
    "webpack-cli": "3.3.3",
    "webpack-node-externals": "1.7.2"
  }
}
