    "react": "16.10.2",
    "react-dom": "16.10.2",
    "regenerator-runtime": "0.13.3",
    "rimraf": "3.0.0",
    "styled-components": "4.4.0",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.0",
    "typescript": "3.6.4",
    "uglifyjs-webpack-plugin": "2.2.0",
    "webpack": "4.41.2",
