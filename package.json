{
  "private": true,
  "name": "@zendeskgarden/react-containers",
  "version": "0.0.0",
  "scripts": {
    "build": "lerna run build --stream",
    "build:demo": "build-storybook -o demo/storybook",
    "format": "yarn format:package_json && yarn format:js && yarn format:ts && yarn format:markdown",
    "format:js": "prettier --loglevel warn --write '{packages/**/!(dist),utils/**}/*.js'",
    "format:markdown": "prettier --loglevel warn --write '{packages/**/!(dist)/!(CHANGELOG)*.md,README.md}'",
    "format:package_json": "prettier-package-json --write && lerna exec -- prettier-package-json --write",
    "format:ts": "prettier --loglevel warn --write '{packages/**/!(dist),utils/**}/*.{ts,tsx}'",
    "postinstall": "lerna bootstrap",
    "lint": "yarn lint:js && yarn lint:markdown",
    "lint:js": "eslint packages/*/src/ packages/*/stories.{js,tsx} utils/ .storybook/ --ext js,ts,tsx --max-warnings 0",
    "lint:markdown": "markdownlint README.md packages/*/src/**/*.md packages/*/src/*.md packages/*/README.md",
    "new": "utils/scripts/create-package.js",
    "prepare": "yarn build",
    "start": "start-storybook -s ./demo -p 6006",
    "start:demo": "yarn build:demo && live-server demo",
    "tag": "lerna version --conventional-commits",
    "test": "yarn test:all --watch",
    "test:all": "jest --config=utils/test/jest.config.js"
  },
  "devDependencies": {
    "@babel/cli": "7.6.4",
    "@babel/core": "7.6.4",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-transform-object-assign": "7.2.0",
    "@babel/polyfill": "7.6.0",
    "@babel/preset-env": "7.6.3",
    "@babel/preset-react": "7.6.3",
    "@storybook/addon-a11y": "5.2.4",
    "@storybook/addon-centered": "5.2.4",
    "@storybook/addon-knobs": "5.2.4",
    "@storybook/addon-storysource": "5.2.4",
    "@storybook/addons": "5.2.4",
    "@storybook/react": "5.2.4",
    "@storybook/theming": "5.2.4",
    "@testing-library/dom": "6.8.1",
    "@testing-library/jest-dom": "4.1.2",
    "@testing-library/react": "9.3.0",
    "@types/jest": "24.0.19",
    "@types/prop-types": "15.7.3",
    "@types/react": "16.9.9",
    "@types/react-color": "3.0.1",
    "@types/react-dom": "16.9.2",
    "@types/webpack": "4.39.3",
    "@types/webpack-env": "1.14.1",
    "@typescript-eslint/eslint-plugin": "2.4.0",
    "@typescript-eslint/parser": "2.4.0",
    "@zendeskgarden/css-variables": "6.4.0",
    "@zendeskgarden/eslint-config": "10.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.3",
    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",
    "babel-plugin-styled-components": "1.10.6",
    "chalk": "2.4.2",
    "core-js": "3.3.2",
    "coveralls": "3.0.7",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-loader": "3.0.2",
    "eslint-plugin-jest": "22.19.0",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-notice": "0.8.9",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-react-hooks": "2.1.2",
    "gh-pages": "2.1.1",
    "handlebars": "4.4.3",
    "handlebars-helpers": "0.10.0",
    "husky": "3.0.9",
    "inquirer": "7.0.0",
    "jest": "24.9.0",
    "lerna": "3.18.1",
    "lint-staged": "9.4.2",
    "live-server": "1.2.1",
    "markdownlint-cli": "0.18.0",
    "popper.js": "1.16.0",
    "prettier": "1.18.2",
